{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "baseUrl": "./",
    "rootDir": ".",
    "types": []
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts",
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
  ],
  "exclude": [
    "src/test.ts",
    "src/app/app-base/config/test-config.ts",
    "src/app/based/configs/test-config.ts",
    "src/app/based/mocks/login/**/*.ts",
    "src/environments/environment.prod.ts",
    "src/assets/**/*.zip",
    "src/**/*.spec.ts",
    "src/app/app-base/**/**.ts",
    "src/app/based/**/**.ts",
  ]
}
